<script>
    $(document).ready(function () {
        $("#myModal1").modal('show')
    })
    function validacupones() {
        $.ajax({
            url: "/POS/valida_estado_cupon",
            data: { codigo_barras: $("#codigo").val() },
            success: function (data) {
                $("#cupones").append(data);
            },
            error: function (data) {
                alert(data);
            }
        })
    }
</script>
<div class="modal fade" id="myModal1" data-backdrop="static" data-keyboard="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close salir" data-dismiss="modal" aria-hidden="true">&times;</button>
            <form>
                <div class="form-group">
                    <label class="control-label">Codigo Convenio / Venta Empresarial</label>
                    <input type="password" id="codigo" autocomplete="off" onblur="validacupones()"/>
                </div>
                <div id="cupones">

                </div>
            </form>
            <h2>ValidaCupones</h2>
        </div>
    </div>
</div>


