<script>
    $(document).ready(function () {
        $("#myModal1").modal('show')
    })
    function validacupones() {
        $.ajax({
            url: "/POS/valida_estado_cupon",
            data: { codigo_barras: $("#codigo").val() },
            success: function (data) {
                debugger
                $("#cupones").empty().append(data);
                adicionar_item(37);
            },
            error: function (data) {
                alert(data);
            }
        })
    }
</script>
<div class="modal fade" id="myModal1" data-backdrop="static" data-keyboard="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="pci-cross pci-circle"></i>
                </button>
                
                    <h2>Validación Cupones</h2>
                <div id="cupones">
                </div>
            </div>

            @*<button type="button" class="close salir" data-dismiss="modal" aria-hidden="true">&times;</button>*@
            <div class="modal-body">
                <form>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Codigo Convenio / Venta Empresarial: </label>

                            <input style="width: 50%;" type="password" id="codigo" autocomplete="off" onblur="validacupones()" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


