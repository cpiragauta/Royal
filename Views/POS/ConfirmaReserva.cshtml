<script>
    $(document).ready(function () {
        debugger
        $("#myModalReserva").modal("show"); //Para Mostrar el modal
         ModalProcesandoHiden();
    });

    function Alerts(menssage, tipo) {
        //warning,success,error
        $.niftyNoty({
            type: tipo,
            container: "floating",
            title: menssage,
            message: "",
            closeBtn: true,
            timer: 5000
        });
    }


    function LiberarManualmente() {
        $.ajax({
            type: "POST",
            url: "/CallCenter/LiberarManualmente",
            data: {
                formulario: $("#FormularioReserva").serialize(),
            },
            success: function (data) {
                $('#myModalReserva').modal('toggle');
                Alerts(data.respuestaTeatro, data.tipoRespuestaTeatro);
                Alerts(data.respuestaCentral, data.tipoRespuestaCentral);
            },
            error: function (data) {
                $('#myModalReserva').modal('toggle');
                Alerts(data.respuestaTeatro, data.tipoRespuestaTeatro);
                Alerts(data.respuestaCentral, data.tipoRespuestaCentral);
            }
        });
    }

    function GuardarReserva() {
