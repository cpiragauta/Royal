@using System.Globalization;
@{
    ViewBag.Title = "BloquearSilla";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}
<style>
    td {
        padding: 0px;
        border: solid 1px;
    }

    img {
        width: 50px;
        z-index: 0;
    }

    .icon-remove-element {
        display: none;
    }

    small {
        margin-left: 1.3%;
