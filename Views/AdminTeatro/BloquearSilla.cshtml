        debugger
        $("#phtml").append(htmlvis);
        $("#mapa-sala").append($("#phtml").text());
        $(".pantalla").width($("#mapa-sala").width())
    })

    function Cargar_Sillas_Bloqueadas() {
        $.ajax({
            url: "/AdminTeatro/DataTable/",
