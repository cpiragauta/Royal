@model IEnumerable<CinemaPOS.Models.Pqrs>

@{
    ViewBag.Title = "Vista PQRS";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}
<p>
    <a class="btn btn-success" href='@Url.Action("CreacionPQRS", "PQRS")'>Nueva PQRS</a>
</p>
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Lista PQRS</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Titulo PQRS</th>
                    <th>Teatro</th>
                    <th class="min-tablet">Tipo solicitud</th>
                    <th class="min-desktop">Estado PQRS</th>
                    <th>Fecha suceso</th>
                    <th>Fecha creación</th>
                    <th>Creado por</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (CinemaPOS.Models.Pqrs pqrs in Model.ToList())
                {
                    <tr>
                        <td>@pqrs.Titulo</td>
                        <td>@pqrs.Teatro.Nombre</td>
                        <td>@pqrs.TipoSolicitud.Nombre</td>
                        <td>@pqrs.Estado.Nombre</td>
                        <td>@pqrs.FechaSuceso.Value.ToString("dd/MM/yyyy")</td>
                        <td>@pqrs.FechaCreacion.Value.ToString("dd/MM/yyyy")</td>
                        <td>@pqrs.CreadoPor</td>
                        <td><a href="@Url.Action("CreacionPQRS", "PQRS", new { RowID_pqrs = pqrs.RowID, RowIdTercero = pqrs.TerceroID})"><i class="glyphicon glyphicon-pencil"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>




