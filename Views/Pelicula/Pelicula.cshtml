        });
        function clonar_config_film() {

            new_config = jQuery(".control-film").clone(true).removeClass("control-film").hide().appendTo(".ultimocontrol").slideDown().addClass("control-film" + cantidadcontrol);
            new_config.find(".listaformato").attr("name", "formato[]");
            new_config.find(".listaversion").attr("name", "version[]");
            close_box_mediopago();
            cantidadcontrol++;
        }

        $('.addmediopago').click(function () {

            clonar_config_film();
        });
        function close_box_mediopago() {
            jQuery(".controls .close").unbind('click').bind('click', function (e) {
                e.preventDefault();
                jQuery(this).closest('.controls').fadeOut('400', function () {
                    jQuery(this).closest('.controls').remove();
                });
            });
        }

