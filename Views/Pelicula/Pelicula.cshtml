                    $(".zoom").find("img").attr({ src: ruta });
                }

                if (uploadFile.size > 3000000) {
                    Alerts('El peso de la imagen no puede exceder de 3 MB', "warning")
                    $(this).attr({ value: '' });
                    $(".zoom").find("img").attr({ src: ruta });
                }

                if (this.height.toFixed(0) <= 399) {
                    Alerts("La altura del afiche debe ser minimo de 400px", "warning")
                    $(this).attr({ value: '' });
                    $(".zoom").find("img").attr({ src: ruta });
                }

            };
            img.src = URL.createObjectURL(uploadFile);
        }
