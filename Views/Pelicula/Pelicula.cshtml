<script>
    function eliminarTeatro(teatro) {
        if ($(teatro).is(':checked')) {
        } else {
            swal({
                title: '¿Esta seguro?',
                text: "¿Desea remover este teatro de la pelicula?",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si',
                cancelButtonText: 'No',
                confirmButtonClass: 'btn btn-success',
                cancelButtonClass: 'btn btn-danger',
                buttonsStyling: false
            },
            function (isConfirm) {
                debugger
                if (isConfirm) {
                    $.ajax({
                        type: "POST",
                        url: "/Pelicula/EliminarTeatroPelicula",
                        data: {
                            rowID: $(teatro).val()
                        },
                        success: function (data) {
                            debugger
                            if (data == "ok") {
                                swal(
                                    'Teatro Eliminado!',
                                    '',
                                    'success'
                                    );
                                CargarTeatro();
                                RefrescarTabla();
                                $(teatro).css("display", "none");
                                $(teatro).parents("tr").find("td").each(function () {
                                    $(this).css("background", "#F44336");
                                    $(this).css("color", "#fff");
                                });
                            } else {
                                'Error al eliminar el teatro',
                                '',
                                'error'
                            }

                        },
                        error: function (request) {
                            hasChangue = true;
                        }
                    });
                } else {
                    RefrescarTabla();
                }
            });
        }

    }
    function ModalTeatroPelicula(rowid) {
        ModalProcesandoShow();
        var urlWithCont = '../Pelicula/ModalTeatroPelicula?rowid=' + rowid;
        $("#Dialog")
        .load(urlWithCont.trim())
        .dialog('open');
    }
    $('.solo-numero').keyup(function () {
