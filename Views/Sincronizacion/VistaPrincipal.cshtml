@model IEnumerable<CinemaPOS.Models.SincronizacionMaestros>


@{
    ViewBag.Title = "Vista Principal";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}
<head>
    <!--jQuery [ REQUIRED ]-->
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
    <!--DataTables [ OPTIONAL ]-->
    <script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <!--DataTables Sample [ SAMPLE ]-->
    <script src="~/Content/js/demo/tables-datatables.js"></script>
</head>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Vista Principal</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th class="min-tablet">Ciudad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (CinemaPOS.Models.Teatro teatro in ViewBag.ListaTeatros)
                {
                    String Color = teatro.Sincronizado == true ? "Verde" : "Rojo";
                    <tr>
                        <td>@teatro.Nombre  @teatro.Ciudad.Nombre</td>
                        @if (teatro.Ciudad != null)
                        {
                            <td> @teatro.Ciudad.Departamento.Nombre - @teatro.Ciudad.Nombre</td>
                        }
                        else
                        {
                            <td></td>
                        }
                        <td><a href="@Url.Action("SincronizacionMaestros", "Sincronizacion", new { RowID_Teatro = teatro.RowID })"><i class="ion-ios-loop-strong"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
