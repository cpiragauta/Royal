@model IEnumerable<CinemaPOS.Models.SincronizacionMaestros>


@{
    ViewBag.Title = "Vista Principal";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}
<head>
    <!--jQuery [ REQUIRED ]-->
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
    <!--DataTables [ OPTIONAL ]-->
    <script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <!--DataTables Sample [ SAMPLE ]-->
    <script src="~/Content/js/demo/tables-datatables.js"></script>
</head>

<script>
    function SincronizarUsuarios() {
        $.ajax({
            type: "POST",
            url: "/Sincronizacion/SincronizarUsuariosDesdeCentral",
            data: {
            },
            success: function (data) {
                Alerts(data, "success");
            },
            error: function (data) {
                Alerts(data, "error");
            }
        });
    }

    function SincronizarSalas() {
        $.ajax({
            type: "POST",
            url: "/Sincronizacion/SincronizarSalasDesdeCentral",
            data: {
            },
            success: function (data) {
                Alerts(data, "success");
            },
            error: function (data) {
                Alerts(data, "error");
            }
        });
    }
</script>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Vista Principal</h3>
    </div>
    <div class="panel-body">
        <div class="panel-body">
            <input class="btn btn-success" type="submit" value="Sincronizar Usuarios" onclick="SincronizarUsuarios()">
            <input class="btn btn-success" type="submit" value="Sincronizar Salas" onclick="SincronizarSalas()">
        </div>
       
            
        <table id="demo-dt-basic" class="table table-striped table-bordered table-funcion" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>RowID</th>
                    <th>RowIDCentral</th>
                    <th>EntidadCentral</th>
                    <th>RowIDLocal</th>
                    <th>EntidadLocal</th>
                    <th>Sincronizado Por</th>
                    <th>Fecha Sincronización</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CinemaPOS.Models.SincronizacionMaestros item in Model)
                {
                    <tr>
                        <td>@item.RowID</td>
                        <td>@item.RowIDCentral</td>
                        <td>@item.EntidadCentral</td>
                        <td>@item.RowIDLocal</td>
                        <td>@item.EntidadLocal</td>
                        <td>@item.SincronizadoPor</td>
                        <td>@item.FechaSincronizacion</td>
                        @*<td>@item.</td>*@
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
