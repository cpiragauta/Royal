@model CinemaPOS.Models.Departamento

@{
    ViewBag.Title = "VistaDepartamento";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}

<head>
    <!--jQuery [ REQUIRED ]-->
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
    <!--DataTables [ OPTIONAL ]-->
    <script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <!--DataTables Sample [ SAMPLE ]-->
    <script src="~/Content/js/demo/tables-datatables.js"></script>
</head>
<p>
    <a class="btn btn-success" href='@Url.Action("Departamento", "Maestro")'>Crear Departamento</a>
</p>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Departamentos</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered table-funcion">
              <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Pais</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (CinemaPOS.Models.Departamento lista_Departamento in ViewBag.Departamento)
                {
                    <tr>
                        <td>@lista_Departamento.RowID</td>
                        <td>@lista_Departamento.Nombre</td>
                        <td>@lista_Departamento.Descripcion</td>
                        <td>@lista_Departamento.Pais.Nombre</td>

                        <td><a href="@Url.Action("Departamento", "Maestro", new { RowID_Lista = lista_Departamento.RowID })"><i class="glyphicon glyphicon-pencil"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>