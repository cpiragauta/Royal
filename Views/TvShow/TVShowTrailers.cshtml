<div id="div"></div>
<div class="row" id="Contenidos">
    <div id="demo-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
        </div>
    </div>
</div>
<script>
    function CargarTrailers() {
        $.ajax({
            url: "TvTrailers",
            success: function (data) {
                $('.carousel-inner').append(data);
                $('.carousel-inner li').slideUp('fast');
            }
        })
    }
    $(document).ready(function () {
        CargarTrailers();
    });
    $(document).ready(function () {
        $("iframe").end(function () {
            alert('El video ha finalizado!!!');
        });
    });
</script>

