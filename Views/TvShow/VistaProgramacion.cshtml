@model IEnumerable<CinemaPOS.Models.Funciones>
@{    ViewBag.Title = "VistaProgramacion";
      Layout = "~/Views/Inicio/Diseño.cshtml";
}

<head>
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
    <script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/js/demo/tables-datatables.js"></script>
</head>
<script type="text/javascript">
    $(function () {
        debugger;

        $('#dialog').dialog({
            autoOpen: false,
            width: 300
        });
    });

    function MostrarDialog() {
        debugger;
        $('#dialog').dialog('option', 'modal', true).dialog('open');

        return true;
    }
</script>



<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Programación TV Show</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>Pelicula</th>
                    <th>Información</th>
                    <th>Ubicación</th>
                    <th>Horarios</th>
                    <th>Estado</th>
                    <th>Afiche</th>    
                    <th></th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (CinemaPOS.Models.Funciones item in Model)
                {
                    <tr>
                        <td>@item.TituloLocal</td>
                        <td><b style="color: rgba(0, 0, 0, 0.71)">Clasificación:   </b>@item.ClasificacionPelicula<br/>
                            @item.PeliculaIdioma - @item.PeliculaVersion<br />                        
                        </td> 
                        <td>
                        <b style="color: rgba(0, 0, 0, 0.71)">Teatro:   </b>@item.NombreTeatro<br/>
                        <b style="color: rgba(0, 0, 0, 0.71)">Sala:   </b>@item.NombreSala</td>
                        <td>
                            <b style="color: rgba(0, 0, 0, 0.71)">Fecha:   </b>@item.Fecha.Value.ToString("dd/MM/yyyy")<br />
                            <b style="color: rgba(0, 0, 0, 0.71)">Hora Inicial:   </b>@item.HoraInicial<br />
                            <b style="color: rgba(0, 0, 0, 0.71)">Hora Final:   </b>@item.HoraFinal<br />
                            <b style="color: rgba(0, 0, 0, 0.71)">Tiempo aseo:   </b>@item.TiempoAseo min<br />
                            <b style="color: rgba(0, 0, 0, 0.71)">Tiempo aseo:   </b>@item.TiempoCorto min
                        </td>
                        <td>@item.NombreEstado</td>
                        <td><img src="/@item.Afiche" alt="" width="200" height="150"></td>
                        <td><a href='javascript:MostrarDialog();' class="ion-trash-a"></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="dialog" title="dialog simple">
        <p>Contenido de la ventana</p>
    </div>
    <div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false" style="overflow: auto; border-radius:2px;">
        <div class="modal-dialog" style="width:600px ;margin-top:-25px">
            <div class="modal-content">
                sdefsf
              
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>

</div>





