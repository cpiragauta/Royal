@model CinemaPOS.ModelosPropios.Util.Cotizaciones
@{
    ViewBag.Title = "ListadoCotizaciones";
    Layout = "~/Views/Inicio/Diseño.cshtml";
}
<p>
    <a class="btn btn-success" href='@Url.Action("Cotizaciones", "CRM")'>Crear Cotizaci&oacute;n</a>
</p>
<script>
    $('#demo-dt-basic').bootstrapTable('method', parameter);
</script>
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Listado de Oportunidad de Venta/Cotizaciones</h3>
    </div>
    <div class="panel-body">
        <table id="demo-dt-basic" class="table table-striped table-bordered table-hover" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Prospecto</th>
                    <th>Teatro</th>
                    <th>Contacto</th>
                    <th>T&iacute;tulo</th>
                    <th>Valor</th>
                    <th>Lista de Precios</th>
                    <th>Fecha Apertura</th>
                    <th>Fecha Cierre</th>
                    <th>Fecha Entrega</th>
                    <th>Descripci&oacute;n</th>
                    <th></th>
                </tr>
            </thead>
            @*<tfoot>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Documento</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Ciudad</th>
                    <th>Tarjeta ID</th>
                    <th>Clasificacion</th>
                    <th>Preferencias</th>
                    <th></th>
                </tr>
            </tfoot>*@
            <tbody>
                @foreach (var item in (List<CinemaPOS.ModelosPropios.Util.Cotizaciones>)ViewBag.Listado)
                {
                    <tr>
                        <td>@item.rowid</td>
                        <td>@item.prospecto</td>
                        <td>@item.teatro </td>
                        <td>@item.contacto</td>
                        <td>@item.titulo</td>
                        <td>@item.valor</td>
                        <td>@item.listaPrecios</td>
                        <td>@item.fechaApertura</td>
                        <td>@item.fechaCierre</td>
                        <td>@item.fechaEntrega</td>
                        <td>@item.descripcion</td>
                        <td><a href="@Url.Action("Cotizaciones", "CRM", new { @rowid = item.rowid })"><i class="glyphicon glyphicon-pencil"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

