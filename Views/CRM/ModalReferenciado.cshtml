@model IEnumerable<CinemaPOS.ModelosPropios.Util.ModalReferencias>
@{
    ViewBag.Title = "ModalReferenciado";
    Layout = null;
}
<script src="~/Content/js/jquery-2.2.4.min.js"></script>
<!--DataTables [ OPTIONAL ]-->
<script src="~/Content/plugins/datatables/media/js/jquery.dataTables.js"></script>
<script src="~/Content/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
<script src="~/Content/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
<!--DataTables Sample [ SAMPLE ]-->
<script src="~/Content/js/demo/tables-datatables.js"></script>
<script>
    ModalProcesandoHiden();
    $("#myModal1").modal('show')
</script>
<div class="modal fade" id="myModal1" data-backdrop="static" data-keyboard="false" style="overflow: auto; border-radius:2px;">
    <div class="modal-dialog" style="width:600px ;margin-top:-25px">
        <div class="modal-content">
            <div class="modal-header" style="padding: 5px;">
                <button type="button" class="close salir" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" style="padding:1px;color:#455A64"><b>@ViewBag.titulo</b></h4>
            </div>
            <div class="modal-body" style="overflow-x: hidden; overflow-y: hidden; height: 350px">
                <p>
                    <a class="btn btn-success" onclick="javascript:Confirmar()">Confirmar</a>
                    <button type="button" class="close salir" data-dismiss="modal" aria-hidden="true">Salir</button>
                </p>

                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Lista Terceros</h3>
                    </div>
                    <div class="panel-body">
                        <table id="demo-dt-basic" class="table table-striped table-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th class="lang">@ViewBag.columna1</th>
                                    <th class="lang">@ViewBag.columna2</th>
                                    <th class="lang">@ViewBag.columna3</th>
                                    <th class="lang">@ViewBag.columna4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ToList())
                                {
                                    <tr>
                                        <td><input type="radio" class="seleccion" name="seleccion" data-rowid="@item.rowid" data-Valor="@item.valor" value="@item.valor"></td>
                                        <td>@item.columna1</td>
                                        <td>@item.columna2</td>
                                        <td>@item.columna3</td>
                                        <td>@item.columna4</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    </div>
    <!-- /.modal -->
