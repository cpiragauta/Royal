                                    @foreach (CinemaPOS.Models.Opcion item in ViewBag.TipoMotivo)
                                    {
                                        if (Model.RowID != 0 && item.RowID == Model.MotivoID)
                                        {
                                            <option value="@item.RowID" selected>@item.Nombre</option>
                                        }
                                        else
                                        {
                                            <option value="@item.RowID">@item.Nombre</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>

